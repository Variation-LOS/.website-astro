<style>
  main {
    display: grid;
    padding: 20px;
    margin-top: 20px;
    place-items: center;
    max-width: 1440px;
  }

  @keyframes weightFadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
      font-weight: 900;
      filter: blur(8px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
      font-weight: 600;
      filter: blur(0px);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
      filter: blur(8px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0px);
    }
  }

  .hero-image-container {
    display: none;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    animation: weightFadeInUp 0.5s ease-out 0.3s both;
    height: 75vh;
  }

  .hero-image-container {
    height: 90%;
    max-height: 650px;
    display: block;
    padding: 0;
    margin-bottom: -148px;
    mask-image: linear-gradient(to bottom, black 40%, transparent 100%);
  }

  .hero-image-container img {
    height: 175%;
    max-height: 650px;
    display: block;
  }

  .hero-title {
    font-size: 70px;
    font-weight: 600;
    text-align: center;
    line-height: 58px;
    background: linear-gradient(
      120deg,
      var(--md-sys-color-primary),
      var(--md-sys-color-on-primary-container)
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: var(--vp-home-hero-name-color);
    color: transparent;
    animation: weightFadeInUp 0.5s ease-out both;
    margin: 0;
    margin-bottom: 12px;
  }

  .hero-subtitle {
    text-align: center;
    font-size: 1.875rem;
    margin-top: 1rem;
    font-weight: 600;
    color: var(--md-sys-color-on-background);
    margin: 0;
    animation: weightFadeInUp 0.5s ease-out 0.15s both;
  }

  .hero-description {
    text-align: center;
    font-size: 1.125rem;
    margin-top: 1rem;
    color: var(--md-sys-color-on-background);
    max-width: 36rem;
    margin: 0;
    animation: weightFadeInUp 0.5s ease-out 0.3s both;
  }

  .button-container {
    display: flex;
    flex-direction: column;
    margin-top: 1.5rem;
    gap: 0.75rem;
    animation: weightFadeInUp 0.5s ease-out 0.4s both;
  }

  .download-link,
  .github-link {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row-reverse;
    padding: 16px 30px;
    gap: 8px;
    border-radius: 48px;
    font-size: 18px;
    transition: all 0.3s cubic-bezier(0.3, 0.0, 0.8, 0.15);
  }

  .download-link:hover,
  .github-link:hover {
    border-radius: 10px;
    transition: all 0.3s cubic-bezier(0.05, 0.7, 0.1, 1.0);
  }

  .download-link {
    background-color: var(--md-sys-color-primary);
    color: var(--md-sys-color-on-primary);
    font-weight: 500;
    border: none;
    text-decoration: none;
  }

  .github-link {
    background-color: var(--md-sys-color-secondary-container);
    color: var(--md-sys-color-on-secondary-container);
    font-weight: 400;
    border: none;
    text-decoration: none;
  }

  @media (min-width: 1024px) {
    main {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      height: 100%;
    }
    .hero-image-container {
      display: block;
      order: 1;
    }
    .hero-title {
      font-size: 4rem;
      letter-spacing: -0.025em;
    }
    .hero-subtitle {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1280px) {
    .hero-title {
      margin-left: -3px;
    }
  }

  @media (min-width: 640px) {
    .button-container {
      flex-direction: row;
    }
  }

  @media (min-width: 480px) {
    .download-link,
    .github-link {
      padding: 14px 28px;
    }

    .hero-title,
    .hero-subtitle,
    .hero-description {
      text-align: start;
    }

    .hero-image-container {
      height: 100%;
      max-height: 650px;
      display: block;
      padding: 24px 0 38px 0;
      margin-bottom: 0px;
      mask-image: linear-gradient(to bottom, black 100%, black 100%);
    }

    .hero-image-container img {
      height: 100%;
      max-height: 650px;
      display: block;
    }
  }

  @media (max-width: 640px) {
    .hero-title {
      animation: fadeInUp 0.5s ease-out both;
    }

    .hero-subtitle {
      animation: fadeInUp 0.5s ease-out 0.15s both;
    }

    .hero-description {
      animation: fadeInUp 0.5s ease-out 0.3s both;
    }

    .button-container {
      animation: fadeInUp 0.5s ease-out 0.4s both;
    }

    .hero-image-container {
      animation: fadeInUp 0.5s ease-out both;
    }
  }

  @media (max-width: 400px) {
    main {
      padding: 8px;
    }
  }

  @media (min-width: 768px) {
    main {
      padding-top: 3rem;
      padding-bottom: 6rem;
      height: 100%;
    }
  }
</style>
