---
import { getCollection } from "astro:content";
import Layout from "src/layouts/Layout.astro";
import Container from "src/components/container.astro";

// Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Get the entry directly from the prop on render
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <Container>
    <style>
      .blog-header {
        margin-left: auto;
        margin-right: auto;
        max-width: 48rem;
        margin-top: 3.5rem;
      }

      .blog-category {
        color: #60a5fa;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: 0.875rem;
        font-weight: 500;
      }

      .blog-title {
        font-size: 2.25rem;
        line-height: 2.5rem;
        font-weight: 700;
        letter-spacing: -0.025em;
        margin-top: 0.25rem;
        line-height: 1.25;
      }

      @media (min-width: 1024px) {
        .blog-title {
          font-size: 3rem;
          line-height: 1;
        }
      }

      .blog-meta {
        display: flex;
        gap: 0.5rem;
        margin-top: 0.75rem;
        align-items: center;
        flex-wrap: wrap;
      }

      @media (min-width: 768px) {
        .blog-meta {
          flex-wrap: nowrap;
        }
      }

      .blog-meta-text {
        color: #9ca3af;
      }

      .blog-content {
        margin-left: auto;
        margin-right: auto;
        margin-top: 1.5rem;
        max-width: 48rem;
      }

      .blog-content > * {
        max-width: 100%;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
        font-size: 1.125rem;
        line-height: 1.75rem;
      }

      .blog-back-link-container {
        text-align: center;
        margin-top: 2rem;
      }

      .blog-back-link {
        background-color: #f3f4f6;
        padding-left: 1.25rem;
        padding-right: 1.25rem;
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
        border-radius: 0.375rem;
        transition: background-color 0.15s ease;
      }

      .blog-back-link:hover {
        background-color: #e5e7eb;
      }
    </style>
    <div class="blog-header">
      <span class="blog-category">
        {entry.data.category}
      </span>
      <h1 class="blog-title">
        {entry.data.title}
      </h1>
      <div class="blog-meta">
        <span class="blog-meta-text">
          {entry.data.author}
        </span>
        <span class="blog-meta-text">•</span>
        <time
          class="blog-meta-text"
          datetime={entry.data.publishDate.toISOString()}>
          {entry.data.publishDate.toDateString()}
        </time>
        <span class="blog-meta-text hidden md:block">•</span>
      </div>
    </div>

    <div class="blog-content">
      <Content />
    </div>
    <div class="blog-back-link-container">
      <a href="/blog" class="blog-back-link">← Back to Blog</a>
    </div>
  </Container>
</Layout>
